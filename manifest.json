{
  "manifest_version": 2,
  "name": "I didn't call you",
  "version": "1.1",

  "description": "Block all unwanted requests from user defined urls",

  "options_ui": {
    "page": "settings/index.html",
    "browser_style": true
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "idcy@idcy.github.io",
      "strict_min_version": "57.0"
    }
  },
  
  "background": {
    "scripts": ["background.js"]
  }
}
